// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Tarefa {
  id        Int      @id @default(autoincrement())
  titulo    String
  descricao String?
  concluida Boolean  @default(false)
  criadoEm  DateTime @default(now())
}
